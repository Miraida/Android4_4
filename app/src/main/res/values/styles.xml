<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/purple_200</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
    </style>
</resources>